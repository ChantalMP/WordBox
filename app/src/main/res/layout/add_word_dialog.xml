<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBright"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_word_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Add new word"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Your language:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_word_dialog_your_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="type here.."
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_word_dialog_your_lang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="type here.."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/add_word_dialog_your_lang3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="type here.."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/addDialogMoreWordsYourLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:background="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Other language:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_word_dialog_other_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="type here..."
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_word_dialog_other_lang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="type here..."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/add_word_dialog_other_lang3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="type here..."
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/addDialogMoreWordsOtherLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:background="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Topics: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/word_edit_topics_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <Button
        android:id="@+id/add_word_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Add"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>